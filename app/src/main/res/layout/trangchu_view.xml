<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorbackground"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgAnhlon_trangchu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/fix"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rychude_trangchu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/imgAnhlon_trangchu"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="0dp"
        android:background="#A9EEE6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rychude_trangchu"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_height="match_parent">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem nhieu nhat"
            android:id="@+id/title_trangchu"
            android:theme="@style/mySpinnerItemStyle"
            android:textSize="@dimen/_13sdp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_5sdp"
            android:id="@+id/reCyDS_trangchu"

            />
    </LinearLayout>

</RelativeLayout>